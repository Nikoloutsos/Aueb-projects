<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.courseRegistration.addEditDeleteCourseRegistration.CourseRegistrationAddEditActivity"
        android:background="#f1f1f1">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

                <TextView
                    android:id="@+id/semester_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/prompt_medium"
                    android:text="Academic period year"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/semester_value__et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/prompt_light"
                    android:inputType="number"
                    android:paddingLeft="32dp"
                    android:paddingRight="32dp"
                    android:text="2019" />

                <TextView
                    android:id="@+id/semester_value2_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/prompt_medium"
                    android:text="Academic period type"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/semester_value2__et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/prompt_light"
                    android:inputType="number"
                    android:paddingLeft="32dp"
                    android:paddingRight="32dp"
                    android:text="Winter" />

                <TextView
                    android:id="@+id/description_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/prompt_medium"
                    android:text="Description"
                    android:textColor="#000000"
                    android:textSize="24sp" />


                <EditText
                    android:id="@+id/description_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:gravity="top"/>

                <TextView
                    android:id="@+id/registered_courses_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/prompt_medium"
                    android:text="Courses"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/selected_courses_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/prompt_medium"
                    android:text="dasddas"
                    android:textColor="#000000"
                    android:textSize="18sp" />
                <LinearLayout
                    android:id="@+id/add_a_course_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_plus"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/add_a_course_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/prompt_medium"
                        android:text="Add a course"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:layout_marginLeft="4dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="1dp"/>

                </LinearLayout>



                <Button
                    android:id="@+id/create_course_registration_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/rounded_cyan_button"
                    android:fontFamily="@font/prompt_block"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="CREATE COURSE REGISTRATION"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    android:layout_gravity="center" />

                <Button
                    android:id="@+id/delete_course_registration_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/rounded_red_button"
                    android:fontFamily="@font/prompt_block"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="DELETE COURSE REGISTRATION"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"/>
            </LinearLayout>




        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>